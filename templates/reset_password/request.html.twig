{% extends 'layout.html.twig' %}

{% block title %}Changement de votre mot de passe{% endblock %}

{% block content %}

<main>
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

     <div class="bg-light-subtle border border-3 border-success rounded p-4 conform mt-4 mb-2">
        <h1>Changer votre mot de passe</h1>

        {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }}
            <div>
                <small>
                    Entrez votre adresse mail et un lien vous sera envoyé.
                </small>
            </div>

            <button class="btn btn-success">Envoyer le mail de rénitialisation </button>
        {{ form_end(requestForm) }}
    </div>
</main>
{% endblock %}
